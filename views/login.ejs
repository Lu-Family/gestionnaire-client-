

<h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Login</h1>
<section class="text-gray-600 body-font">
  <div class="container mx-auto px-5 py-24 flex flex-wrap items-center justify-center">
    
    <div class="md:w-1/2 bg-gray-100 rounded-lg p-8  mt-10 md:mt-0">
      <h2 class="text-gray-900 text-lg font-medium title-font mb-5">Login</h2>
     
      <form class="flex flex-col content-center w-full" action="/login" method="POST">
        
      <% if (message=='Le nom d\'utilisateur ou l\'adresse email sont incorrects') { %>
     
        
        <div class="relative mb-4">
          <label for="email" class="leading-7 text-sm font-medium text-red-700 dark:text-red-500">Nom d'utilisateur ou Email</label>
          <input type="text" id="email" name="email" class=" bg-red-50 rounded border border-red-500 text-red-900 placeholder-red-700 text-sm focus:ring-red-500 dark:bg-gray-700 focus:border-red-500 block w-full p-2.5 dark:text-red-500 dark:placeholder-red-500 dark:border-red-500">
          <p class="mt-2 text-sm text-red-600 dark:text-red-500"><span class="font-medium">Ah, Zut!</span> <%= message %></p>
        </div>
    

   <% }else{ %>
    <div class="relative mb-4">
      <label for="email" class="leading-7 text-sm text-gray-600">Nom d'utilisateur ou Email</label> 
      <input type="text" id="email" name="email" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
 
    </div>
   
    <% } %>
    

      <% if (message=='Le mot de passe est incorrect') { %>
     
  
        <div class="relative mb-4">
          <label for="password" class="leading-7 text-sm font-medium text-red-700 dark:text-red-500">Mot de passe</label>
          <input type="password" id="password" name="password" class=" bg-red-50 rounded border border-red-500 text-red-900 placeholder-red-700 text-sm focus:ring-red-500 dark:bg-gray-700 focus:border-red-500 block w-full p-2.5 dark:text-red-500 dark:placeholder-red-500 dark:border-red-500">
          <p class="mt-2 text-sm text-red-600 dark:text-red-500"><span class="font-medium">Ah, Zut!</span> <%= message %></p>
        </div>
    

   <% }else{ %>
    <div class="relative mb-4">
      <label for="password" class="leading-7 text-sm text-gray-600">Mot de passe</label>
      <div class="flex items-center justify-end">
      <input type="password" id="password" name="password" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
      <svg  id="showPasswordIcon" class="w-6 h-6 mr-4 absolute cursor-pointer togglePasswordIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <svg class="w-6 h-6 mr-4 absolute cursor-pointer invisible togglePasswordIcon" id="hidePasswordIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
      </svg>
      
      </div>
    </div>
   
    <% } %>
   


      
      <button type="submit" class="text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">Se connecter</button>
      <p class="text-xs text-gray-500 mt-3">Literally you probably haven't heard of them jean shorts.</p>
      <div class="text-sm">
        <a href="/register" class="font-medium text-indigo-600 hover:text-indigo-500">Pas encore de compte ?</a>
      </div>
    </form>
  </div>

  </div>
</section>

   
   